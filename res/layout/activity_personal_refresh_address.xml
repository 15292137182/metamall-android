<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:background="@color/bg_gray">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bg_gray" >

        <ImageButton
                android:id="@+id/address_refresh_ib_back"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="#00000000"
                android:contentDescription="@string/back"
                android:src="@drawable/top_arrow_back"
                />


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/confirm_refresh"
                android:textSize="20sp"
                android:textColor="#333333"
                />
    </RelativeLayout>
    <include android:id="@+id/add_address_refresh_2"
             layout="@layout/activity_add_refresh"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="20dip"
            android:layout_marginTop="20dip">

        <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/lightRed"
                android:layout_gravity="bottom"
                android:layout_marginEnd="40dip"
                android:layout_marginStart="40dp"
                android:text="@string/confirm_refresh_button"
                android:textSize="26sp"
                android:id="@+id/address_refresh"
                />
        </LinearLayout>

</LinearLayout>