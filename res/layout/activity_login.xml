<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_gray">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white" >

            <ImageButton
                    android:id="@+id/login_ib_back"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:background="#00000000"
                    android:contentDescription="@string/back"
                    android:src="@drawable/top_arrow_back" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/login"
                    android:textSize="20sp"
                    android:textColor="#2b2b2b"
            />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/login_top_bg1" >

            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_margin="25dp"
                    android:background="@drawable/shape_login_dog"
                    android:contentDescription="@string/logo"
                    android:padding="2dp"
                    android:src="@drawable/logo" />
        </RelativeLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical" >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:background="@color/white">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:text="@string/account"
                        android:textSize="18sp"
                        android:textColor="#555555"
                />

                <EditText
                        android:id="@+id/login_et_account"
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:hint="@string/account_hint"
                        android:textSize="18sp" />

            </LinearLayout>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/bg_gray" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginTop="2dp"
                    android:visibility="visible"
                    android:id="@+id/password_login_linear"
                    >

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="20dp"
                        android:text="@string/password"
                        android:textSize="18sp"
                        android:textColor="#555555"
                />

                <EditText
                        android:id="@+id/login_et_password"
                        android:layout_width="0dp"
                        android:layout_height="34dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:hint="@string/password1"
                        android:inputType="textPassword"
                        android:textSize="18sp" />
                <CheckBox

                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/passYN"
                        android:checked="false"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:button="@drawable/passyn"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:layout_marginTop="2dp"
                    android:id="@+id/code_login_linear"
                    android:visibility="gone">
                <EditText
                        android:id="@+id/login_num"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:hint="@string/prompt"
                        android:inputType="number"
                        android:textSize="18sp" />
                <com.metamall.Clutter.TimeButton.TimeButton
                        android:text="@string/getIde"
                        android:textSize="15sp"
                        android:layout_width="92dp"
                        android:layout_height="48dp"
                        android:background="#cccccc"
                        android:textColor="#303030"
                        android:id="@+id/getAgain_login"/>
            </LinearLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/style_switch"
                    android:textColor="#ee4000"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:gravity="end"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:id="@+id/code_login"/>
                </RelativeLayout>




        </LinearLayout>





        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48sp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginTop="30dip">
            <Button
                    android:id="@+id/login_btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:background="#4a4a4a"
                    android:text="@string/register"
                    android:textColor="@color/white"
                    android:textSize="17sp"

                    />
            <Button
                    android:id="@+id/login_btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#cd0000"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="17sp"

                  />


        </LinearLayout>


    </LinearLayout>
</ScrollView>