<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:background="@color/bg_gray">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white" >

        <ImageButton
                android:id="@+id/ib_back_personal_secure"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="#00000000"
                android:contentDescription="@string/back"
                android:src="@drawable/top_arrow_back"
                />


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/account_security"
                android:textSize="19sp"
                android:textColor="#555555"
                />

    </RelativeLayout>
    <LinearLayout
            android:id="@+id/login_secure_password"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/c12"
            android:layout_marginTop="15dip">
        <TextView

                android:text="@string/login_password"
                android:textColor="#363636"
                android:textSize="17.8sp"
                android:layout_width="fill_parent"
                android:gravity="center_vertical"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_marginStart="16dip"
                />
        <TextView
                android:text="@string/login_password_tip"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:textColor="#FFD700"
                android:layout_weight="2"
                android:layout_marginStart="16dip"
                />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/c12"
            android:layout_marginTop="15dip"
            android:orientation="horizontal">
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"

            android:id="@+id/login_secure_telephone1"
            android:text="@string/secure_telephone"
            android:gravity="center_vertical"
            android:layout_marginStart="16dip"
            android:textColor="#363636"
            android:layout_weight="10"
            />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:layout_marginEnd="20dip"
                android:text="@string/secure_telephone_change"
                android:textColor="#555555"
                android:textSize="15sp"
                android:gravity="center"
                android:id="@+id/login_secure_telephone_3"/>
        </LinearLayout>

</LinearLayout>