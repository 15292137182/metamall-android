<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_gray">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:orientation="horizontal"
                android:background="#ffd700"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp" >

            <EditText
                    android:id="@+id/home_top_et_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_input_search"
                    android:hint="@string/find_et_hint"
                    android:drawableStart="@drawable/top_search_icon"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/gray"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:focusable="false"/>
        </LinearLayout>
        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                >

            <com.metamall.activity.Home.ConvenientBanner
                    android:id="@+id/convenientBanner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
            <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:orientation="horizontal"
                android:layout_marginTop="18dip">
            <Button
                    android:id="@+id/erHuo_home"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:padding="10dp"
                    android:background="@drawable/erhuo2"
                    android:layout_marginStart="2dip"
                    android:layout_marginEnd="2dip"/>

            <Button
                    android:id="@+id/goodSeal_home"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:background="@drawable/goodseal2"
                    android:layout_marginStart="2dip"
                    android:layout_marginEnd="2dip"


                    />

            <Button
                    android:id="@+id/teJia_home"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:background="@drawable/tejia2"
                    android:layout_marginStart="2dip"
                    android:layout_marginEnd="2dip"/>
            <Button
                    android:id="@+id/question_home"
                    android:layout_width="100dp"
                    android:layout_height="fill_parent"
                    android:background="@drawable/question2"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_marginStart="2dip"
                    android:layout_marginEnd="2dip"

                    />


        </LinearLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dip"
                android:background="@drawable/c12">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weekGoods"
                    android:layout_centerInParent="true"
                    android:textColor="#000000"
                    android:textSize="18sp"/>
            <Button
                    android:id="@+id/forMore_weekDated"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:text="@string/for_more"
                    android:textColor="#333333"
                    android:background="@android:color/transparent"
                    android:layout_marginEnd="10dip"
                    />
            <RelativeLayout
                android:id="@+id/weekDated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" >
            </RelativeLayout>

       </RelativeLayout>
        <include
                android:id="@+id/home_include_1"
                layout="@layout/activity_home_include">

        </include>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dip"
                android:background="@drawable/c12">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goods_everyday"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_centerInParent="true"/>
            <Button
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:text="@string/for_more"
                    android:textColor="#333333"
                    android:layout_marginEnd="10dip"
                    android:background="@android:color/transparent"
                    android:id="@+id/forMore_goods_everyday"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/goods_everyday"
                    android:background="@color/white">

            </RelativeLayout>

        </RelativeLayout>
        <include
                android:id="@+id/home_include_2"
                layout="@layout/activity_home_include"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dip"
                android:background="@drawable/c12">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_crazy"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_centerInParent="true"/>
            <Button
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@android:color/transparent"
                    android:layout_centerVertical="true"
                    android:layout_centerInParent="true"
                    android:text="@string/for_more"
                    android:textColor="#333333"
                    android:layout_marginEnd="10dip"
                    android:id="@+id/forMore_last_crazy"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:id="@+id/last_crazy">

            </RelativeLayout>

        </RelativeLayout>
        <include
                android:id="@+id/home_include_3"
                layout="@layout/activity_home_include"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15dip"
                android:background="@drawable/c12">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/for_sell"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_centerInParent="true"/>
            <Button
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:text="@string/for_more"
                    android:textColor="#333333"
                    android:layout_marginEnd="10dip"
                    android:id="@+id/forMore_for_sell"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:id="@+id/for_sell">

            </RelativeLayout>

        </RelativeLayout>
        <include
                android:id="@+id/home_include_4"
                layout="@layout/activity_home_include"/>

    </LinearLayout>

</ScrollView>