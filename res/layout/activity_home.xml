<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_gray">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#ffd700"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp" >

            <EditText
                    android:id="@+id/home_top_et_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_input_search"
                    android:hint="@string/find_et_hint"
                    android:drawableStart="@drawable/top_search_icon"
                    android:gravity="center_vertical"
                    android:textColorHint="@color/gray"
                    android:singleLine="true"
                    android:textSize="15sp" />




        </LinearLayout>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp" >

                    <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
                            android:id="@+id/home_viewPager"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    <com.meta.viewpagerindicator.CirclePageIndicator
                            android:id="@+id/home_indicator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="10dp" />

                </FrameLayout>

                <com.metamall.noscrollview.NoScrollListView
                        android:id="@+id/home_lv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp" />

            </LinearLayout>

        </ScrollView>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginTop="30dip">
            <Button
                    android:id="@+id/Question"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/question1"
                    android:paddingTop="@string/question1"
                    android:textColor="@color/black"
                    android:textSize="17sp"

                    />
            <Button
                    android:id="@+id/goodSeal"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/goodseal"
                    android:text="@string/goodSeal"


                    />
            <Button
                    android:id="@+id/erHuo"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/erhuo"
                    android:paddingTop="@string/erHuo"/>
            <Button
                    android:id="@+id/teJia"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/tejia1"
                    android:paddingTop="@string/teJia"/>


        </LinearLayout>


    </LinearLayout>

</ScrollView>