<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/bg_gray"
        >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffd700" >

        <ImageButton
                android:id="@+id/personal_ib_back"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:background="#00000000"
                android:contentDescription="@string/back"
                android:src="@drawable/top_arrow_back"
                />


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/personal_sex"
                android:textSize="20sp"
                android:textColor="#333333"
                />
    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="16dip"
            android:orientation="vertical">
        <Button
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:text="@string/male"
                android:textColor="#333333"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="14dip"
                android:id="@+id/male_select"

                />
        <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#999999"
                />
        <Button
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:layout_marginEnd="14dip"
                android:layout_marginStart="30dp"
                android:text="@string/female"
                android:textColor="#333333"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:id="@+id/female_select"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="#999999"
                />
        <Button
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:layout_marginEnd="14dip"
                android:layout_marginStart="30dip"
                android:text="@string/sex_secret"
                android:textSize="20sp"
                android:textColor="#333333"
                android:gravity="center_vertical"
                android:id="@+id/secret_select"/>
    </LinearLayout>

</LinearLayout>