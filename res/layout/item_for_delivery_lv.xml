<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:descendantFocusability="blocksDescendants">



    <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/item_for_delivery_iv"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerInside" />

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_toEndOf="@id/item_for_delivery_iv"
            android:orientation="vertical" >

        <TextView
                android:id="@+id/item_for_delivery_tv_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:maxLines="2"
                android:minLines="2"
                android:textSize="17sp" />

        <TextView
                android:id="@+id/item_for_delivery_tv_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textSize="17sp" />

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                >

            <Button
                    android:id="@+id/item_for_delivery_btn_drawback"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:background="@drawable/my_button"
                    android:text="@string/drawback"
                    android:textColor="#ee7621"
                    android:layout_marginStart="40dp"
                    />

            <Button
                    android:id="@+id/item_for_delivery_btn_press"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:background="@color/red"
                    android:text="@string/press"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="4dp"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>