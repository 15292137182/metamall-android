<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="320dp"
              android:orientation="vertical"
              android:padding="10dp">

    <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_pd_second_layer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/default_image_loading" />

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="140dp"
            android:layout_marginStart="20dp"
            android:orientation="vertical" >

        <TextView
                android:id="@+id/tv_item_pd_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apple MacBook Air MJVE2CH/A 13.3 英寸宽屏笔记本电脑"
                android:textSize="18sp"/>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">
            <TextView
                    android:id="@+id/tv_item_pd_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="￥:8888.00"
                    android:textColor="@color/red"
                    android:layout_gravity="bottom|start"
                    android:layout_weight="1"/>
            <TextView
                    android:id="@+id/tv_item_pd_sale_volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="销量：20万"
                    android:layout_gravity="start|bottom"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>